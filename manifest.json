{
  "manifest_version": 2,
  "name": "PKTranslate",
  "version": "0.2.0",

  "description": "English-Russian translator using Yandex.Translate API",
  "icons": {
    "16": "data/translate-16.png",
    "32": "data/translate-32.png",
    "48": "data/translate-48.png",
    "64": "data/translate-64.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/webpage/content_script.js"],
      "run_at": "document_end"
    }
  ],

  "applications": {
    "gecko": {
      "id": "@pktranslate"
    }
  },

  "permissions": ["activeTab", "storage", "webRequest", "tabs"],

  "browser_action": {
    "default_icon": "data/translate-32.png",
    "default_title": "3-Перевести выделенный текст"
  },

  "background": {
    "scripts": ["lib/utils.js", "scripts/background/background.js"]
  },

  "options_ui": {
    "page": "options/options.html"
  }
}